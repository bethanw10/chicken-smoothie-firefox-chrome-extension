{
  "name": "Chicken Smoothie Helper",
  "description": "A utility extension for Chicken Smoothie",
  "homepage_url": "https://github.com/bethanw10",
  "manifest_version": 2,
  "options_ui": {
      "page": "options.html",
      "browser_style": true
  },  
  "browser_action": {
      "default_title": "Chicken Smoothie Helper",
	  "default_popup": "popup/popup.html"
  },
  "icons": {
	"48": "images/icon-48.png",
	"96": "images/icon-48.png"
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
	"https://www.chickensmoothie.com/",
	"tabs"
  ],
  "background": {
      "scripts": ["background.js"]
  },  
  "content_scripts": [
    {
      "matches": ["https://www.chickensmoothie.com/accounts/viewgroup.php*"],
      "js": ["content-script.js", "/library/jquery.js"]
    }
  ],
  "version": "1.1",
  "applications": {
      "gecko": {
          "id": "favourite-colour-examples@mozilla.org",
          "strict_min_version": "57.0a1"
      }
  }
}
